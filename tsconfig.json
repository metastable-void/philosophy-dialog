{
  "compilerOptions": {
    "target": "es2023",
    "lib": [
      "ES2023"
    ],
    "types": ["@types/node"],
    "module": "Node16",
    "sourceMap": true,
    "declaration": true,
    "newLine": "lf",
    "outDir": "./dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "moduleResolution": "node16",
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "src/**/*"
  ]
}